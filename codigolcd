#include <LiquidCrystal.h>

int botao = 6;
int estadoBotao = 0;
int contador = 0;
int contadorluz = 0;
int contador3 = 0;
int contador4 = 0;

void modoautomatico();
void displaylcd();
void modomanual();
void configuracoes();
void ajuda();
void centrifuga();
void secagem();
void luzvioleta();
void corrosao();

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

void setup()
{
  pinMode(botao, INPUT);
  lcd.begin(20, 4);
}

void loop()
{ 
  displaylcd();
  estadoBotao = digitalRead(botao);
}

void displaylcd()
{
  lcd.clear();
  lcd.cursor();
  lcd.blink();
  lcd.setCursor(0, 0);
  lcd.print("->Modo Automatico");
  delay(3000);
    if (estadoBotao == HIGH) 
      modoautomatico();
  lcd.setCursor(0, 1);
  lcd.print("->Modo Manual");
  delay(3000);
    if (estadoBotao == HIGH);
      modomanual();
  lcd.setCursor(0, 2);
  lcd.print("->Configurações");
  delay(3000);
    if (estadoBotao == HIGH);
      configuracoes();
  lcd.setCursor(0, 3);
  lcd.print("->Ajuda");
  delay(3000);
    if (estadoBotao == HIGH);
      ajuda();
}

void modoautomatico()
{
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Incializando...");
  lcd.clear();
  lcd.cursor();
  lcd.setCursor(0, 0);
  lcd.print("->Lave a placa");
  lcd.setCursor(0, 1);
  lcd.print("->com bombril");
    if (estadoBotao == HIGH);
  lcd.setCursor(0, 2);
  lcd.print("->Seque a placa");
    if (estadoBotao == HIGH);
  lcd.setCursor(0, 3);
  lcd.print("->Pinte a placa");
    if (estadoBotao == HIGH);
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("->Agora vamos usar a");
  lcd.setCursor(5, 1);
  lcd.print("->Centriuga");
    centrifuga();
  lcd.clear();
  lcd.print("->Vamos usar a secagem");
    secagem();
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("->Colocar o fotolito");
  lcd.setCursor(0, 1);
  lcd.print("->Usar a luz ultravioleta");
    luzvioleta();
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("->Usar a barrilha");
  lcd.setCursor(0, 1);
  lcd.print("->Retirar a tinta");
  lcd.setCursor(0, 2);
  lcd.print("->Novamente usar a luz violeta");
  lcd.setCursor(0, 3);
  lcd.print("->Usar o hipercloreto");
    corrosao();
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("->Lavar a placa");
  lcd.setCursor(0, 1);
  lcd.print("->Usar soda caustica");
  lcd.setCursor(0, 2);
  lcd.print("->Cortar e lixar placa");
  lcd.setCursor(0, 3);
  lcd.print("->Trabalhar as legendas");
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("->Agora, repetir as etapas de:");
  lcd.setCursor(0, 1);
  lcd.print("->Limpar, Pintar, Centrifugar, Secar");
  lcd.setCursor(0, 2);
  lcd.print("->Colocar a mascara");
  lcd.setCursor(0, 3);
  lcd.print("->Utilizar barrilha");
  lcd.clear();
  lcd.setCursor(5, 1);
  lcd.print("Processo Finalizado");
}

void modomanual()
{
  lcd.clear();
  lcd.cursor();
  lcd.blink();
  lcd.setCursor(0, 0);
  lcd.print("Qual processo");
  lcd.setCursor(0, 1);
  lcd.print("deseja ativar?");
  lcd.setCursor(0, 3);
  lcd.print("->Centrifuga?");
    if (estadoBotao == HIGH);
      centrifuga();
  delay(3000);
  lcd.setCursor(0, 1);
  lcd.print("->Secagem?");
    if (estadoBotao == HIGH);
      secagem();
  delay(3000);
  lcd.setCursor(0, 2);
  lcd.print("->Luz Ultravioleta?");
    if (estadoBotao == HIGH);
      luzvioleta();
  delay(3000);
  lcd.setCursor(0, 3);
  lcd.print("->Corrosao?");
    if (estadoBotao == HIGH);
      corrosao(); 
}

void configuracoes()
{
  
}

void ajuda()
{
  
}

void centrifuga()
{
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Centrifugando...");
  delay(3000);
  lcd.setCursor(10, 1);
  for(contador; contador < 30; contador++)
  {
    lcd.print("contador");
    delay(1000); 
    lcd.clear();
  }
}

void secagem()
{
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Secagem...");
  delay(3000);
  lcd.setCursor(0, 1);
  lcd.print("Pressione para iniciar");
    if (estadoBotao == HIGH);
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Secando");
  lcd.setCursor(10, 1);
  for(contador3; contador3 < 30; contador3++)
  {
    lcd.print("contador3");
    delay(1000); 
    lcd.clear();
  }
    
}

void luzvioleta()
{
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Luz UV...");
  delay(3000);
  lcd.setCursor(10, 1);
  for(contadorluz; contadorluz < 30; contadorluz++)
  {
    lcd.print("contadorluz");
    delay(1000); 
    lcd.clear();
  }
}

void corrosao()
{
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Corrosao...");
  delay(3000);
  lcd.setCursor(0, 1);
  lcd.print("Pressione para iniciar");
    if (estadoBotao == HIGH);
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Corroendo");
  lcd.setCursor(10, 1);
  for(contador4; contador4 < 30; contador4++)
  {
    lcd.print("contador4");
    delay(1000); 
    lcd.clear();
  }
}
