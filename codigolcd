#include <LiquidCrystal.h>

int botao = 6;
int botao2 = 10;
int botao3 = 9;
int botao4 = 8;
int estadoBotao = 0;
int contador = 0;
int buzzer = 1;

unsigned long timeLV = 16;
unsigned long timeCent = 16;
unsigned long timeSecagem = 31;
unsigned long timeCorrosao = 31;

void modoautomatico();
void displaylcd();
void modomanual();
void configuracoes();
void ajuda();
void centrifuga();
void secagem();
void luzvioleta();
void corrosao();

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);

void setup()
{
  pinMode(botao, INPUT);
  lcd.begin(20, 4);
}

void loop()
{ 
  displaylcd();
}

void displaylcd()
{
  lcd.clear();
  lcd.cursor();
  lcd.blink();
  lcd.setCursor(0, 0);
  lcd.print("->Modo Automatico");
  delay(3000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH) 
      modoautomatico();
  lcd.setCursor(0, 1);
  lcd.print("->Modo Manual");
  delay(3000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH)
      modomanual();
  lcd.setCursor(0, 2);
  lcd.print("->Configurações");
  delay(3000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH)
      configuracoes();
  lcd.setCursor(0, 3);
  lcd.print("->Ajuda");
  delay(3000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH)
      ajuda();
}

void modoautomatico()
{
  lcd.clear();
  lcd.setCursor(0, 0);
  lcd.print("Incializando...");
  lcd.clear();
  lcd.cursor();
  lcd.setCursor(0, 0);
  lcd.print("->Lave a placa");
  lcd.setCursor(0, 1);
  lcd.print("->com bombril");
  delay(2000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH){
      lcd.setCursor(0, 2);
      lcd.print("->Seque a placa");
      delay(2000);
      estadoBotao = digitalRead(botao);
        if (estadoBotao == HIGH){
          lcd.setCursor(0, 3);
          lcd.print("->Pinte a placa");
          delay(2000);
          estadoBotao = digitalRead(botao);
            if (estadoBotao == HIGH){
              lcd.clear();
              lcd.setCursor(0, 0);
              lcd.print("->Agora vamos usar a");
              lcd.setCursor(5, 1);
              lcd.print("->Centriuga");
                centrifuga();
              lcd.clear();
              lcd.print("->Vamos usar a secagem");
                secagem();
              lcd.clear();
              lcd.setCursor(0, 0);
              lcd.print("->Colocar o fotolito");
              lcd.setCursor(0, 1);
              lcd.print("->Usar a luz ultravioleta");
                luzvioleta();
              lcd.clear();
              lcd.setCursor(0, 0);
              lcd.print("->Usar a barrilha");
              lcd.setCursor(0, 1);
              lcd.print("->Retirar a tinta");
              lcd.setCursor(0, 2);
              lcd.print("->Novamente usar a luz violeta");
              lcd.setCursor(0, 3);
              lcd.print("->Usar o hipercloreto");
                corrosao();
              lcd.clear();
              lcd.setCursor(0, 0);
              lcd.print("->Lavar a placa");
              lcd.setCursor(0, 1);
              lcd.print("->Usar soda caustica");
              lcd.setCursor(0, 2);
              lcd.print("->Cortar e lixar placa");
              lcd.setCursor(0, 3);
              lcd.print("->Trabalhar as legendas");
              lcd.clear();
              lcd.setCursor(0, 0);
              lcd.print("->Agora, repetir as etapas de:");
              lcd.setCursor(0, 1);
              lcd.print("->Limpar, Pintar, Centrifugar, Secar");
              lcd.setCursor(0, 2);
              lcd.print("->Colocar a mascara");
              lcd.setCursor(0, 3);
              lcd.print("->Utilizar barrilha");
              lcd.clear();
              lcd.setCursor(5, 1);
              lcd.print("Processo Finalizado");
            }
        }
    }
}

void modomanual()
{
  lcd.clear();
  lcd.cursor();
  lcd.blink();
  lcd.setCursor(0, 0);
  lcd.print("Qual processo");
  lcd.setCursor(0, 1);
  lcd.print("deseja ativar?");
  lcd.setCursor(0, 3);
  lcd.print("->Centrifuga?");
  lcd.print("Aperte o botao 1");
  delay(2000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH)
      centrifuga();
  delay(3000);
  lcd.clear();
  lcd.setCursor(0, 1);
  lcd.print("Deseja ativar");
  lcd.setCursor(0, 2);
  lcd.print("outro processo?");
  lcd.setCursor(0, 3);
  lcd.print("SIM-aperte o botao 1");
  delay(2000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH)
    {
      modomanual(); 
    }
    else
    {
      displaylcd();
    }
  lcd.print("->Secagem?");
  lcd.setCursor(0, 2);
  lcd.print("Aperte o botao 2");
  delay(2000);
  estadoBotao = digitalRead(botao2);
    if (estadoBotao == HIGH)
      secagem();
  delay(3000);
  lcd.clear();
  lcd.setCursor(0, 1);
  lcd.print("Deseja ativar");
  lcd.setCursor(0, 2);
  lcd.print("outro processo?");
  lcd.setCursor(0, 3);
  lcd.print("SIM-aperte o botao 2");
  delay(2000);
  estadoBotao = digitalRead(botao2);
    if (estadoBotao == HIGH)
    {
      modomanual(); 
    }
    else
    {
      displaylcd();
    }
  lcd.clear();
  lcd.setCursor(0, 1);
  lcd.print("->Luz Ultravioleta?");
  lcd.setCursor(0, 2);
  lcd.print("Aperte o botao 3");
  delay(2000);
  estadoBotao = digitalRead(botao3);
    if (estadoBotao == HIGH)
      luzvioleta();
  delay(3000);
  lcd.clear();
  lcd.setCursor(0, 1);
  lcd.print("Deseja ativar");
  lcd.setCursor(0, 2);
  lcd.print("outro processo?");
  lcd.setCursor(0, 3);
  lcd.print("SIM-aperte o botao 3");
  delay(2000);
  estadoBotao = digitalRead(botao3);
    if (estadoBotao == HIGH)
    {
      modomanual(); 
    }
    else
    {
      displaylcd();
    }
  lcd.clear();
  lcd.setCursor(0, 1);
  lcd.print("->Corrosao?");
  lcd.setCursor(0, 2);
  lcd.print("Aperte o botao 4");
  delay(2000);
  estadoBotao = digitalRead(botao4);
    if (estadoBotao == HIGH)
      corrosao();
  delay(3000);
  lcd.clear();
  lcd.setCursor(0, 1);
  lcd.print("Deseja ativar");
  lcd.setCursor(0, 2);
  lcd.print("outro processo?");
  lcd.setCursor(0, 3);
  lcd.print("SIM-aperte o botao 1");
  delay(2000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH)
    {
      modomanual(); 
    }
    else
    {
      displaylcd();
    }
  lcd.clear(); 
}

void configuracoes()
{
  //Definir o tempo da luz ultravioleta
  //scanf("%u" &timeLV);
}

void ajuda()
{
  
}

void centrifuga()
{
  unsigned long tempo = 0;
  int contador = 0;
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Centrifugando...");
  delay(3000);
  lcd.setCursor(10, 1);
  for(tempo; tempo < 1000 && contador < timeCent; contador++)
  {
    lcd.print(contador);
    delay(1000); 
    lcd.clear();
    tempo = 0;
  }
  do{
    tone(buzzer, 261);
  }while(estadoBotao != HIGH); 
}

void secagem()
{
  unsigned long tempo = 0;
  int contador = 0;
  
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Secagem...");
  delay(3000);
  lcd.setCursor(0, 1);
  lcd.print("Pressione para iniciar");
  delay(2000);
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH)
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Secando");
  lcd.setCursor(10, 1);
  for(tempo; tempo < 60000 && contador < timeSecagem; contador++)
  {
    lcd.print(contador);
    delay(1000); 
    lcd.clear();
    tempo = 0;
  }
  do{
    tone(buzzer, 261);
  }while(estadoBotao != HIGH);
}

void luzvioleta()
{
  unsigned long tempo = 0;
  int contador = 0;
  
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Luz UV...");
  delay(3000);
  lcd.setCursor(10, 1);
  for(tempo; tempo < 60000 && contador < timeLV; contador++)
  {
    lcd.print(contador);
    delay(1000); 
    lcd.clear();
    tempo = 0;
  }
  do{
    tone(buzzer, 261);
  }while(estadoBotao != HIGH);
}

void corrosao()
{
  unsigned long tempo = 0;
  int contador =0;
  
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Corrosao...");
  delay(3000);
  lcd.setCursor(0, 1);
  lcd.print("Pressione para iniciar");
  estadoBotao = digitalRead(botao);
    if (estadoBotao == HIGH)
  lcd.clear();
  lcd.setCursor(7, 0);
  lcd.print("Corroendo");
  lcd.setCursor(10, 1);
  for(tempo; tempo < 60000 && contador < timeCorrosao; contador++)
  {
    lcd.print(contador);
    delay(1000); 
    lcd.clear();
    tempo = 0;
  }
  do{
    tone(buzzer, 261);
  }while(estadoBotao != HIGH);
}

